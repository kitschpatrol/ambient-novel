{
	"extends": "./tsconfig.json",

	// Skips project files for typescript-eslint integration
	"include": [
		"./.svelte-kit/ambient.d.ts",
		"./.svelte-kit/non-ambient.d.ts",
		"./.svelte-kit/types/**/$types.d.ts",
		"./vite.config.js",
		"./vite.config.ts",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte",
		"./tests/**/*.js",
		"./tests/**/*.ts",
		"./tests/**/*.svelte",
		"./scripts/**/*.ts",
		"./.eslintrc.cjs"
	]
}
