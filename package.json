{
	"name": "ambient-novel",
	"version": "1.0.5",
	"type": "module",
	"description": "Website for nonlinear interactive exploration of The Valentine Mob novel.",
	"repository": {
		"type": "git",
		"url": "https://github.com/kitschpatrol/ambient-novel.git"
	},
	"homepage": "https://39forks.com/thevalentinemob",
	"bugs": {
		"url": "https://github.com/kitschpatrol/ambient-novel/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"keywords": [
		"ambient",
		"book",
		"fiction",
		"interactive",
		"novel"
	],
	"scripts": {
		"build": "vite build && ts-node ./scripts/setHtaccessBasePath.ts",
		"build-report": "dust -t -b ./build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev --host",
		"format": "prettier --plugin prettier-plugin-svelte --write .",
		"generate-data": "ts-node ./scripts/generateData.ts",
		"generate-licenses": "license-checker-rseidelsohn --direct --excludePrivatePackages --excludePackagesStartingWith '@playwrith;@types;@prettier;prettier;eslint' --json --out ./src/lib/data/licenses.json",
		"generate-package-info": "jq '{version, name, description}' package.json > ./src/lib/data/pkgInfo.json",
		"lint": "prettier --plugin prettier-plugin-svelte --check . && eslint .",
		"prebuild": "npm run generate-package-info && npm run generate-licenses",
		"preview": "vite preview --host",
		"scrape-pdf": "ts-node ./scripts/scrapePdf.ts"
	},
	"devDependencies": {
		"@cyber2024/pdf-parse-fixed": "^1.2.5",
		"@fortawesome/free-solid-svg-icons": "^6.5.1",
		"@kitschpatrol/shared-config": "^4.3.1",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tsparticles/engine": "^3.0.3",
		"@tsparticles/slim": "^3.0.3",
		"@tsparticles/svelte": "^3.0.0",
		"@types/glob": "^8.1.0",
		"@types/howler": "^2.2.11",
		"@types/html-minifier": "^4.0.5",
		"@types/lodash": "^4.14.202",
		"@types/pdf-parse": "^1.1.4",
		"@types/sanitize-html": "^2.9.5",
		"@types/scrollbooster": "^3.0.3",
		"@types/seedrandom": "^3.0.8",
		"@types/tinycolor2": "^1.4.6",
		"@types/ua-parser-js": "^0.7.39",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"html-minifier": "^4.0.0",
		"leven": "^4.0.0",
		"license-checker-rseidelsohn": "^4.3.0",
		"lodash": "^4.17.21",
		"mrmime": "^2.0.0",
		"node-html-parser": "^6.1.12",
		"node-jq": "^4.2.2",
		"postcss": "^8.4.32",
		"sanitize-html": "^2.11.0",
		"scrollbooster": "^3.0.2",
		"seedrandom": "^3.0.5",
		"string-strip-html": "^13.4.4",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-fa": "^3.0.4",
		"tailwindcss": "^3.4.0",
		"tinycolor2": "^1.6.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"ua-parser-js": "^1.0.37",
		"vite": "^5.0.10",
		"vite-plugin-mkcert": "^1.17.1",
		"workbox-build": "^7.0.0",
		"zod": "^3.22.4"
	}
}
