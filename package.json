{
	"name": "ambient-novel",
	"version": "2.0.2",
	"private": true,
	"description": "An interface for nonlinear, interwoven, and interactive exploration of a novel.",
	"keywords": [
		"ambient",
		"book",
		"fiction",
		"interactive",
		"novel",
		"svelte",
		"whisper"
	],
	"homepage": "https://39forks.com/thevalentinemob",
	"bugs": "https://github.com/kitschpatrol/ambient-novel/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/github:kitschpatrol/ambient-novel"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"scripts": {
		"prebuild": "svelte-kit sync && pnpm run generate-package-info && pnpm run generate-licenses && pnpm run copy-source-data && kpi-prettier fix",
		"build": "pnpm run prebuild && vite build && tsx ./scripts/set-htaccess-base-path.ts",
		"build-report": "dust -t -b ./build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "rm -rf ./build ./dist ./node_modules pnpm-lock.yaml",
		"copy-source-data": "cp ./data/book.json ./src/lib/data/book-source.json",
		"dev": "vite dev --host",
		"fix": "kpi fix",
		"generate-data": "tsx ./scripts/generate-data.ts",
		"generate-licenses": "pnpm licenses list --json > ./src/lib/data/licenses.json",
		"generate-package-info": "jq '{version, name, description}' package.json > ./src/lib/data/pkg-info.json",
		"lint": "kpi lint",
		"preview": "vite preview --host",
		"scrape-pdf": "tsx ./scripts/scrape-pdf.ts"
	},
	"devDependencies": {
		"@cyber2024/pdf-parse-fixed": "^1.2.5",
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@kitschpatrol/shared-config": "^5.0.6",
		"@playwright/test": "^1.50.1",
		"@prettier/sync": "^0.5.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.17.3",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tsparticles/engine": "^3.8.1",
		"@tsparticles/slim": "^3.8.1",
		"@tsparticles/svelte": "^3.1.1",
		"@types/glob": "^8.1.0",
		"@types/howler": "^2.2.12",
		"@types/html-minifier": "^4.0.5",
		"@types/lodash": "^4.17.15",
		"@types/node": "22.0.0",
		"@types/pdf-parse": "^1.1.4",
		"@types/sanitize-html": "^2.13.0",
		"@types/scrollbooster": "^3.0.3",
		"@types/seedrandom": "^3.0.8",
		"@types/tinycolor2": "^1.4.6",
		"@types/ua-parser-js": "^0.7.39",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.4.7",
		"glob": "^10.4.5",
		"html-minifier": "^4.0.0",
		"leven": "^4.0.0",
		"lodash": "^4.17.21",
		"mrmime": "^2.0.1",
		"node-html-parser": "^6.1.13",
		"node-id3": "^0.2.8",
		"node-jq": "^6.0.1",
		"postcss": "^8.5.3",
		"sanitize-html": "^2.14.0",
		"scrollbooster": "^3.0.2",
		"seedrandom": "^3.0.5",
		"string-strip-html": "^13.4.8",
		"svelte": "^4.2.19",
		"svelte-check": "^4.1.4",
		"svelte-fa": "^4.0.3",
		"tailwindcss": "^3.4.17",
		"tinycolor2": "^1.6.0",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3",
		"ua-parser-js": "^1.0.40",
		"vite": "^5.4.14",
		"vite-plugin-mkcert": "^1.17.6",
		"workbox-build": "^7.3.0",
		"workbox-range-requests": "^7.3.0",
		"workbox-routing": "^7.3.0",
		"zod": "^3.24.2"
	},
	"packageManager": "pnpm@10.5.2",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@sveltejs/kit",
			"@tsparticles/engine",
			"esbuild",
			"node-jq",
			"puppeteer"
		],
		"overrides": {
			"eslint-plugin-markdown": "^5.1.0"
		}
	}
}
