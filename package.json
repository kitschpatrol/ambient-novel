{
	"name": "ambient-novel",
	"version": "1.0.3",
	"type": "module",
	"description": "Website for nonlinear interactive exploration of The Valentine Mob novel.",
	"repository": {
		"type": "git",
		"url": "https://github.com/kitschpatrol/ambient-novel.git"
	},
	"homepage": "https://39forks.com/thevalentinemob",
	"bugs": {
		"url": "https://github.com/kitschpatrol/ambient-novel/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "CC BY-NC-SA 4.0",
	"private": true,
	"keywords": [
		"book",
		"novel",
		"fiction",
		"interactive"
	],
	"scripts": {
		"build": "vite build && ts-node ./scripts/setHtaccessBasePath.ts",
		"build-report": "dust -t -b ./build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev --host",
		"format": "prettier --plugin prettier-plugin-svelte --write .",
		"generate-data": "ts-node ./scripts/generateData.ts",
		"generate-licenses": "license-checker-rseidelsohn --direct --excludePrivatePackages --excludePackagesStartingWith '@playwrith;@types;@prettier;prettier;eslint' --json --out ./src/lib/data/licenses.json",
		"generate-package-info": "jq '{version, name, description}' package.json > ./src/lib/data/pkgInfo.json",
		"lint": "prettier --plugin prettier-plugin-svelte --check . && eslint .",
		"prebuild": "npm run generate-package-info && npm run generate-licenses",
		"preview": "vite preview --host",
		"scrape-pdf": "ts-node ./scripts/scrapePdf.ts"
	},
	"devDependencies": {
		"@cyber2024/pdf-parse-fixed": "^1.2.5",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@prettier/sync": "^0.3.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.1",
		"@tailwindcss/container-queries": "^0.1.1",
		"@types/glob": "^8.1.0",
		"@types/howler": "^2.2.10",
		"@types/html-minifier": "^4.0.4",
		"@types/lodash": "^4.14.200",
		"@types/pdf-parse": "^1.1.3",
		"@types/prettier": "^2.7.3",
		"@types/sanitize-html": "^2.9.3",
		"@types/scrollbooster": "^3.0.2",
		"@types/seedrandom": "^3.0.7",
		"@types/tinycolor2": "^1.4.5",
		"@types/ua-parser-js": "^0.7.38",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"html-minifier": "^4.0.0",
		"leven": "^4.0.0",
		"license-checker-rseidelsohn": "^4.2.10",
		"lodash": "^4.17.21",
		"mrmime": "^1.0.1",
		"node-html-parser": "^6.1.11",
		"node-jq": "^4.2.2",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-organize-imports": "^3.2.3",
		"prettier-plugin-pkg": "^0.18.0",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.6",
		"sanitize-html": "^2.11.0",
		"scrollbooster": "^3.0.2",
		"seedrandom": "^3.0.5",
		"string-strip-html": "^13.4.3",
		"svelte": "^4.2.2",
		"svelte-check": "^3.5.2",
		"svelte-fa": "^3.0.4",
		"svelte-particles": "^2.12.0",
		"tailwindcss": "^3.3.5",
		"tinycolor2": "^1.6.0",
		"ts-node": "^10.9.1",
		"tsparticles-slim": "^2.12.0",
		"typescript": "^5.2.2",
		"ua-parser-js": "^1.0.36",
		"vite": "^4.5.0",
		"vite-plugin-mkcert": "^1.16.0",
		"workbox-build": "^7.0.0",
		"zod": "^3.22.4"
	}
}
